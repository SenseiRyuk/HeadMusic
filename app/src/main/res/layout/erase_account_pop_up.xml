<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@drawable/gradientbackground"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/acceptEraseAccount"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textEraseAccount"
            app:layout_constraintVertical_bias="0.371"
            app:srcCompat="@drawable/confirm" />

        <ImageButton
            android:id="@+id/refuseEraseAccount"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textEraseAccount"
            app:layout_constraintVertical_bias="0.364"
            app:srcCompat="@drawable/delete" />

        <TextView
            android:id="@+id/textEraseAccount"
            android:layout_width="292dp"
            android:layout_height="131dp"
            android:gravity="center"
            android:text="An account from this mail adress has the finger print register on your phone\nDo you want to delete this account "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.309" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>