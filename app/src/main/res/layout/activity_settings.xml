<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/secondLayout"
    android:background="@drawable/gradientbackground"
    tools:context=".Setting.SettingActivity">

    <ImageButton
        android:id="@+id/returnMainMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/returnmenu" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Your App"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <EditText
        android:id="@+id/hexadecimalForStopColor"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Hexadecimal"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/applyColorChange"
        app:layout_constraintEnd_toStartOf="@+id/hexadecimalForButtonColor"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/hexadecimalForStartColor"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.845" />

    <Button
        android:id="@+id/endButton"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:background="@drawable/roundbutton"
        android:textSize="12dp"
        android:text="End Color"
        app:layout_constraintBottom_toTopOf="@+id/hexadecimalForStopColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.65" />

    <EditText
        android:id="@+id/hexadecimalForStartColor"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Hexadecimal"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/applyColorChange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.845" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:background="@drawable/roundbutton"
        android:text="Start Color"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/hexadecimalForStartColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/endButton"
        app:layout_constraintHorizontal_bias="0.342"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.655" />

    <Button
        android:id="@+id/colorbutton"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:background="@drawable/roundbutton"
        android:text="Button Color"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/hexadecimalForButtonColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toEndOf="@+id/endButton"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.655" />

    <EditText
        android:id="@+id/hexadecimalForButtonColor"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Hexadecimal"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/applyColorChange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.845" />

    <Button
        android:id="@+id/applyColorChange"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:background="@drawable/roundbutton"
        android:text="Apply"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.392" />

    <ImageView
        android:id="@+id/colorTab"
        android:layout_width="370dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.081"
        app:srcCompat="@drawable/palette_color" />

    <TextView
        android:id="@+id/currentHexadecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HexadÃ©cimal"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/colorTab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/defaultColor"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:background="@drawable/roundbutton"
        android:text="Default Color"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applyColorChange" />

    <ImageButton
        android:id="@+id/logOutBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.987"
        app:layout_constraintStart_toEndOf="@+id/returnMainMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logout" />


</androidx.constraintlayout.widget.ConstraintLayout>