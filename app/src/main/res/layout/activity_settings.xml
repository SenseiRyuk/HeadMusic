<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/secondLayout"
    android:background="@drawable/gradientbackground"
    tools:context="com.example.if26new.SettingActivity">

    <ImageButton
        android:id="@+id/returnMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/returnmenu" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Your App"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <EditText
        android:id="@+id/hexadecimalForStopColor"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Hexadecimal"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/applyColorChange"
        app:layout_constraintEnd_toStartOf="@+id/hexadecimalForButtonColor"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/hexadecimalForStartColor"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.844" />

    <Button
        android:id="@+id/endButton"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:background="@drawable/roundbutton"
        android:text="End Button"
        app:layout_constraintBottom_toTopOf="@+id/hexadecimalForStopColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toEndOf="@+id/startButton"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.642" />

    <EditText
        android:id="@+id/hexadecimalForStartColor"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Hexadecimal"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/applyColorChange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.844" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:background="@drawable/roundbutton"
        android:text="Start Color"
        app:layout_constraintBottom_toTopOf="@+id/hexadecimalForStartColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.647" />

    <Button
        android:id="@+id/colorbutton"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:background="@drawable/roundbutton"
        android:text="Button Color"
        app:layout_constraintBottom_toTopOf="@+id/hexadecimalForButtonColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toEndOf="@+id/endButton"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.647" />

    <EditText
        android:id="@+id/hexadecimalForButtonColor"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Hexadecimal"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/applyColorChange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorTab"
        app:layout_constraintVertical_bias="0.844" />

    <Button
        android:id="@+id/applyColorChange"
        android:layout_width="108dp"
        android:layout_height="35dp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/roundbutton"
        android:text="Apply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/colorTab"
        android:layout_width="380dp"
        android:layout_height="218dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/palette_color" />

    <TextView
        android:id="@+id/currentHexadecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HexadÃ©cimal"
        app:layout_constraintBottom_toTopOf="@+id/colorTab"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:text="Log Out"
        android:background="@drawable/roundbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applyColorChange"
        app:layout_constraintVertical_bias="0.235" />

    <Button
        android:id="@+id/defaultColor"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:text="Default Color"
        android:background="@drawable/roundbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.729"
        app:layout_constraintStart_toEndOf="@+id/logOutBtn"
        app:layout_constraintTop_toBottomOf="@+id/applyColorChange"
        app:layout_constraintVertical_bias="0.235" />


</androidx.constraintlayout.widget.ConstraintLayout>